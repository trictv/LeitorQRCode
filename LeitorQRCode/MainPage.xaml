<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LeitorQRCode.MainPage">

    <ContentPage.BackgroundImageSource>
        <FileImageSource File="trictv.jpg" />
    </ContentPage.BackgroundImageSource>

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

            <!-- Aumentei ainda mais a margem superior para mover o botão mais para baixo -->
            <Button Text="Abrir Câmera" Clicked="btnCamera_OnClicked" BackgroundColor="#2196F3" TextColor="White" CornerRadius="5" Margin="0,370,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
